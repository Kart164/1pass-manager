<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="_1Pass.UI.XamarinUi.Pages.Login">
    <ContentPage.Content>
        <StackLayout x:Name="layout" Orientation="Vertical" VerticalOptions="Center">
            <Label x:Name="WelcomeText" FontSize="Large" HorizontalTextAlignment="Center" Text="Welcome to 1Pass!&#10;Enter password:"/>
            <Entry x:Name="Password" TextChanged="Password_TextChanged" IsPassword="True" Placeholder="Password" PlaceholderColor="LightGray" FontSize="Medium"/>
            <Label x:Name="Error" HorizontalTextAlignment="Center" FontSize="Medium" IsVisible="False"/>
            <Button x:Name="Submit" Text="Login" IsEnabled="False" BackgroundColor="CadetBlue" TextColor="White" FontSize="Large" Clicked="Submit_OnClick"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>